

@model Course

<div class="card border-danger flex-column align-content-center">
  <div class="card-header w-100">Delete Confirm</div>
   <div class="card-body text-danger w-100">
        <h5 class="card-title">Are You Sure!</h5>
        <p class="card-text">You Want Delete @Model.Name Course.</p>
  </div>
  <div class="card-footer w-100 flex-row justify-content-between">
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Course">Close</a>
        <form method="post" asp-action="Delete" asp-controller="Course" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Name" />
            <input type="hidden" asp-for="Degree" />
            <input type="hidden" asp-for="MinDegree" />
            <input type="hidden" asp-for="DepartmentId" />
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>
  </div>
</div>
