@{
    SelectList deps = new SelectList(ViewBag.Deps, "Id", "Name");
}
@model Course
<h2 class="text-center mt-0">Add New Course </h2>
<form asp-action="Add" asp-controller="Course" method="post">
    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form form-control" />
    </div>
    <div>
        <label asp-for="Degree"></label>
        <input asp-for="Degree" class="form form-control" />
    </div>
    <div>
        <label asp-for="MinDegree"></label>
        <input asp-for="MinDegree" class="form form-control" />
    </div>
    <div>
        <label asp-for="DepartmentId"></label>
        <select asp-for="DepartmentId" asp-items="deps" class="form form-control"></select>
    </div>
    <br />
    <center><input type="submit" value="Add" class="btn btn-dark" /></center>
</form>
<br />

<a class="btn btn-dark" asp-action="Index" asp-controller="Course">Back</a>
