@model List<Course>
<h2 class="text-center mt-0">Courses</h2>
<br />
<a asp-action="Add" asp-controller="Course" class="btn btn-primary mt-3">Add Course</a>
<br />
<table class="table table-bordered table-hover text-center table-responsive mt-3 ">
    <thead>
        <tr>
            <th>Name</th>
            <th>Degree</th>
            <th>Min Degree</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Course item in Model)
        {
            <tr>
                <th>@item.Name</th>
                <th>@item.Degree</th>
                <th>@item.MinDegree</th>
                <th>@item.DepartmentId</th>
                <td><a asp-action="Details" asp-controller="Course" asp-route-id="@item.Id" class="btn btn-primary mt-3">Details</a></td>
            </tr>
        }
    </tbody>
</table>
