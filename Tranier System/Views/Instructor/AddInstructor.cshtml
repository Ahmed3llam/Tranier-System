@model InstDeptVM
<h2>Add New Instructor </h2>
<form action="/Instructor/SaveAdd" method="post" enctype="multipart/form-data">
    <div>
        <label>Name</label>
        <input type="text" value="@Model?.Name" name="Name" id="Name" class="form form-control" />
    </div>
    <div>
        <label>Address</label>
        <input type="text" value="@Model?.Address" name="Address" id="Address" class="form form-control" />
    </div>
    <div>
        <label>Salary</label>
        <input type="text" value="@Model?.Salary" name="Salary" id="Salary" class="form form-control" />
    </div>
    <div>
        <label>Image</label>
        <input type="file" name="Image" id="Image" class="form form-control" />
        @* <input type="file" value="@Model?.Image" name="Image" id="Image" class="form form-control" /> *@
    </div>
    <div>
        <label>Department</label>
        <select name="DepartmentId" id="DepartmentId" class="form form-control">
            @foreach (var department in Model.Depts)
            {
                    @if (department.Id==Model.DepartmentId)
                    {
                        <option selected value="@department.Id">@department.Name</option>
                    }else
                    {
                        <option value="@department.Id">@department.Name</option>
                    }        
            }
        </select>
    </div>
    <div>
        <label>Course</label>
        <select name="CourseId" id="CourseId" class="form form-control">
            @foreach (var course in Model.Courses)
            {
                @if (course.Id == Model.CourseId)
                {
                    <option selected value="@course.Id">@course.Name</option>
                }
                else
                {
                    <option value="@course.Id">@course.Name</option>
                }
            }
        </select>
    </div>
    <br />
    <center><input type="submit" value="Add" class="btn btn-dark" /></center>
</form>
<br />

<a class="btn btn-dark" href="/Instructor/Index">Back</a>